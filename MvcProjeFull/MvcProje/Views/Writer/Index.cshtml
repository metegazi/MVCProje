@using EntityLayer.Concrate
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string color1, color2 = "";
    string durumText = "";
    string durumText2 = "";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yazarlar Sayfası</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        if (item.WriterStatus == true)
                        {
                            durumText = "Pasif Yap";
                            durumText2 = "Aktif";

                            color1 = "btn btn-danger btn-sm";
                            color2 = "badge badge-success";
                        }
                        else
                        {
                            durumText = "Aktif Yap";
                            durumText2 = "Pasif";
                            color1 = "btn btn-success btn-sm";
                            color2 = "badge badge-danger";

                        }
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    @item.WriterTitle
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@item.WriterName @item.WriterSurname</b></h2>
                                            <p class="text-muted text-sm"><b>Hakkında: </b> @item.WriterAbout. </p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail: @item.WriterMail</li>
                                                <li class="@color2">Durumu: @durumText2</li>
                                            </ul>

                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="@item.WriterImage" alt="" class="img-circle img-fluid">

                                            @*AdminLTE-3.0.4/dist/img/user1-128x128.jpg*@
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <div class="small">
                                            @*/Heading/ContentByHeading/@item.*@
                                            <a href="/Heading/HeadingByWriter/@item.WriterID" class="btn btn-sm bg-teal">
                                                <i class="fas fa-comments"></i> Başlıkları
                                            </a>
                                            <a href="/Writer/EditWriter/@item.WriterID" class="btn btn-sm btn-primary">
                                                <i class="fas fa-user"></i> Düzenle
                                            </a>


                                            <a href="/Writer/DeleteWriter/@item.WriterID" class="@color1">
                                                <i class="fas fa-user"></i> @durumText
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <!-- /.card-body -->
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->

    </section>
    <a href="/Writer/AddWriter/" class="btn btn-primary">Yeni Yazar Ekle</a>
</body>
</html>

