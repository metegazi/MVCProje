@model EntityLayer.Concrate.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Yeni Admin Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))
{
<div class="form-group">
    @*@Html.Label("Admin Kullanıcı Adı")*@
    @Html.TextBoxFor(x => x.AdminUserName, new { placeholder = "Admin Kullanıcı Adı", @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AdminUserName)
    <br />
    @*@Html.Label("Şifreyi Giriniz")*@
    @Html.TextBoxFor(x => x.AdminPassword, new { placeholder = "Şifreyi Giriniz", @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AdminPassword)
    <br />
    @*@Html.Label("Rolü Seçiniz")*@
    @Html.TextBoxFor(x => x.AdminRole, new { placeholder = "Rolü Seçiniz", @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AdminRole)
    <br />
    <button class="btn btn-info">Kaydet</button>
</div>
}


